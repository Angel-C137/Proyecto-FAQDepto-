<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="controllers.ControladorCrearCuenta">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Text style="-fx-font-weight: bold;" text="Crea tu cuenta" underline="true" GridPane.columnIndex="1"
          GridPane.rowIndex="0">
        <font>
            <Font name="Cambria" size="25"/>
        </font>
    </Text>

    <ImageView fitHeight="90.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../icons/uqroo.png"/>
        </image>
    </ImageView>

    <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2">
        <image>
            <Image url="@../icons/mascota.png"/>
        </image>
    </ImageView>

    <ToolBar  HBox.hgrow="ALWAYS" GridPane.columnIndex="2" GridPane.rowIndex="1">
        <Button onAction="#inicio" text="Inicio"/>
        <Button onAction="#unirse" text="Unirse"/>
    </ToolBar>

    <Label text="Nombre completo" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

    <TextField fx:id="nombreCompleto" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>

    <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="4"/>

    <TextField fx:id="password" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

    <Label text="Matricula" GridPane.columnIndex="0" GridPane.rowIndex="6"/>

    <TextField fx:id="matricula" GridPane.rowIndex="7" GridPane.columnSpan="2" GridPane.columnIndex="0"/>

</GridPane>
